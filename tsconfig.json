{
  "compilerOptions": {
    "outDir": "./dist",

    /* Language and Environment */
    "target": "es2016",

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
  },
  "ts-node": {
    "esm":true,
    "experimentalSpecifierResolution": "node",
  },
  "include": ["/**/*.ts"],
  "exclude": ["node_modules"]
}
